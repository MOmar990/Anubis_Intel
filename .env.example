# Anubis Intelligence Platform - Environment Configuration
# Copy this file to .env and customize for your deployment

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
ANUBIS_LOG_LEVEL=INFO
ANUBIS_LOG_FORMAT=json

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
ANUBIS_DB_TYPE=sqlite
ANUBIS_DB_PATH=./database/anubis_intel.db
ANUBIS_DB_ECHO=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
ANUBIS_PDF_ENCRYPT=true
ANUBIS_PDF_PASSWORD=CLASSIFIED
ANUBIS_EXIF_STRIP=true
ANUBIS_AUDIT_LOGGING=true
ANUBIS_MAX_UPLOAD_MB=50

# ============================================================================
# PDF GENERATION
# ============================================================================
ANUBIS_PDF_DPI=300
ANUBIS_PDF_QUALITY=85
ANUBIS_ENABLE_WATERMARK=true
ANUBIS_WATERMARK_OPACITY=0.15

# ============================================================================
# TEMPLATES
# ============================================================================
ANUBIS_DEFAULT_TEMPLATE=anubis_dossier

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ANUBIS_APP_TITLE=Anubis Intelligence Platform v4.0
ANUBIS_AUTO_SAVE_DRAFTS=true

# ============================================================================
# ADVANCED OPTIONS
# ============================================================================
# Set to true for development/debugging
DEBUG=false

# Maximum file upload size in MB
MAX_FILE_SIZE_MB=50

# Enable batch processing
BATCH_PROCESSING=true

# Database backup
DB_BACKUP_ENABLED=true
DB_BACKUP_DIR=./database/backups
